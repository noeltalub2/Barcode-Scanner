<!-- BEGIN #sidebar -->
<div id="sidebar" class="app-sidebar">
    <!-- BEGIN scrollbar -->
    <div class="app-sidebar-content" data-scrollbar="true" data-height="100%">
        <!-- BEGIN menu -->
        <% if (user.role==='admin' ) {%>
            <div class="menu">
                <div class="menu-header">Navigation</div>
                <div class="menu-item <%=page == 'dashboard' ? 'active' : ''%>">
                    <a href="/admin/dashboard" class="menu-link">
                        <span class="menu-icon"><i class="fa fa-home"></i></span>
                        <span class="menu-text">Dashboard</span>
                    </a>
                </div>
                <div class="menu-item <%=page == 'student' ? 'active' : ''%>">
                    <a href="/admin/student" class="menu-link">
                        <span class="menu-icon"><i class="fa fa-users"></i></span>
                        <span class="menu-text">Manage Student</span>
                    </a>
                </div>

                <div class="menu-item <%= page == 'attendance' ? 'active' : '' %>">
                    <a href="/admin/attendance" class="menu-link">
                        <span class="menu-icon"><i class="fa fa-calendar-check"></i></span>
                        <span class="menu-text"> Attendance</span>
                    </a>
                </div>
                <div class="menu-item <%= page == 'faculty' ? 'active' : '' %>">
                    <a href="/admin/faculty" class="menu-link">
                        <span class="menu-icon"><i class="fa fa-user"></i></span>
                        <span class="menu-text">Manage Faculty</span>
                    </a>
                </div>
                <div class="menu-item <%= page == 'subjects' ? 'active' : '' %>">
                    <a href="/admin/subjects" class="menu-link">
                        <span class="menu-icon"><i class="fa fa-book"></i></span>
                        <span class="menu-text">Subject</span>
                    </a>
                </div>
                <div class="menu-item <%= page == 'class' ? 'active' : '' %>">
                    <a href="/admin/class" class="menu-link">
                        <span class="menu-icon"><i class="fa fa-chalkboard-teacher"></i></span>
                        <span class="menu-text">Classes</span>
                    </a>
                </div>


                <div class="menu-header">Others</div>
                <div class="menu-item <%= page == 'settings' ? 'active' : '' %>">
                    <a href="/admin/settings" class="menu-link">
                        <span class="menu-icon"><i class="fa fa-cog"></i></span>
                        <span class="menu-text">Settings</span>
                    </a>
                </div>

                <div class="p-3 px-4 mt-auto hide-on-minified">
                    <button onclick="logoutPopout()" class="btn btn-secondary d-block w-100 fw-600 rounded-pill">
                        <i class="fas fa-fw me-2 fa-sign-out-alt"></i></i> Logout
                    </button>
                </div>
            </div>
            <%} else if (user.role==='faculty') {%>
                <div class="menu">
                    <div class="menu-header">Navigation</div>
                    <div class="menu-item <%=page == 'dashboard' ? 'active' : ''%>">
                        <a href="/faculty/dashboard" class="menu-link">
                            <span class="menu-icon"><i class="fa fa-home"></i></span>
                            <span class="menu-text">Dashboard</span>
                        </a>
                    </div>
                    <!-- <div class="menu-item <%=page == 'student' ? 'active' : ''%>">
                        <a href="/faculty/student" class="menu-link">
                            <span class="menu-icon"><i class="fa fa-users"></i></span>
                            <span class="menu-text">Manage Student</span>
                        </a>
                    </div> -->
                    <div class="menu-item <%= page == 'class' || page == 'attendance' ? 'active' : '' %>">
                        <a href="/faculty/class" class="menu-link">
                            <span class="menu-icon"><i class="fa fa-chalkboard-teacher"></i></span>
                            <span class="menu-text">Classes</span>
                        </a>
                    </div>

            

                    <div class="menu-item <%= page == 'profile' ? 'active' : '' %>">
                        <a href="/faculty/profile" class="menu-link">
                            <span class="menu-icon"><i class="fa fa-user"></i></span>
                            <span class="menu-text"> My Profile</span>
                        </a>
                    </div>





                    <div class="p-3 px-4 mt-auto hide-on-minified">
                        <button onclick="logoutPopout()" class="btn btn-secondary d-block w-100 fw-600 rounded-pill">
                            <i class="fas fa-fw me-2 fa-sign-out-alt"></i></i> Logout
                        </button>
                    </div>
                </div>
                <%}%>
                    <!-- END menu -->
    </div>
    <!-- END scrollbar -->

    <!-- BEGIN mobile-sidebar-backdrop -->
    <button class="app-sidebar-mobile-backdrop" data-dismiss="sidebar-mobile"></button>
    <!-- END mobile-sidebar-backdrop -->
</div>
<!-- END #sidebar -->