<% layout('./Layout/layout.ejs') -%>
    <style>
        /* CSS */
        button.html5-qrcode-element {
            appearance: button;

            box-sizing: border-box;
            color: #ffffff;
            cursor: pointer;

            font-size: 14px;
            line-height: 1.15;
            overflow: visible;
            padding: 0.375rem 0.75rem;
            position: relative;
            text-align: center;
            text-transform: none;
            transition: all 80ms ease-in-out;
            user-select: none;
            -webkit-user-select: none;
            touch-action: manipulation;
            width: fit-content;
        }

        button.html5-qrcode-element:disabled {
            opacity: 0.5;
        }

        button.html5-qrcode-element:focus {
            outline: 0;
        }

        #html5-qrcode-button-camera-start:hover,
        #html5-qrcode-button-camera-permission:hover {
            background-color: #424649;
            border-color: #373b3e;
        }

        #html5-qrcode-button-camera-start:active,
        #html5-qrcode-button-camera-permission:active {
            background-color: #4d5154;
            border-color: #373b3e;
        }

        #html5-qrcode-button-camera-stop:hover {
            background-color: #bb2d3b;
            border-color: #dc3545;
        }

        #html5-qrcode-button-camera-stop:active {
            background-color: #b02a37;
            border-color: #a52834;
        }

        #html5-qrcode-button-camera-start,
        #html5-qrcode-button-camera-permission {
            background-color: var(--bs-gray-dark);
            border: 1px solid var(--bs-gray-dark);
            border-radius: 3px;
        }

        #html5-qrcode-button-camera-stop {
            background-color: var(--bs-danger);
            border: 1px solid var(--bs-danger);
            border-radius: 3px;
        }

        .radio-tile-group {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
        }

        .input-container {
            position: relative;
            height: 6rem;
            width: 6rem;
            margin: 0.5rem;
            border: 1px solid var(--bs-gray);
            border-radius: 3px;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        /* Make actual radio input invisible and stretch it */
        .radio-button {
            opacity: 0;
            position: absolute;
            top: 0;
            left: 0;
            height: 100%;
            width: 100%;
            margin: 0;
            cursor: pointer;
        }

        /* Default tile styles */
        .radio-tile {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            width: 100%;
            height: 100%;
            border-radius: 3px;
            padding: 1rem;
            text-align: center;
        }

        .radio-tile-label {
            font-size: 0.75rem;
            font-weight: 600;
            text-transform: uppercase;
        }

        /* Active tile styles */
        .radio-button:checked+.radio-tile {
            background-color: var(--bs-yellow);
            color: var(--bs-blue);
        }

        #barcodeData {
            opacity: 1
        }
    </style>
    <div id="content" class="app-content">


        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/admin/record-attendance">ATTENDANCE</a></li>
        </ol>
        <h1 class="page-header">
            Record Attendance <small>overview</small>
        </h1>



        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <div class="row gx-4 justify-content-center">


                            <div class="col-lg-8">
                                <div class="time-container">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <!-- Large Time Display -->
                                        <div class="text-center flex-grow-1">
                                            <div id="time" class="display-4 text-blue-700 fw-bold"></div>
                                        </div>
                                        <!-- Date Display -->
                                        <h3 id="dynamicDate" class="fw-bold ms-4"></h3>
                                    </div>

                                </div>

                                <div class="table-responsive">

                                    <!-- Table of Attendance -->
                                    <table class="table table-bordered attendance-table" id="attendanceTable">
                                        <thead class="thead-dark ">
                                            <tr>
                                                <th>#</th>
                                                <th>Student Number</th>
                                                <th>Name</th>
                                                <th>Attendance Date</th>
                                                <th>Status</th>
                                                <th>Logs</th>
                                            </tr>
                                        </thead>

                                    </table>
                                </div>

                            </div>
                            <div class="col-lg-4">
                                <div class="text-center ">


                                    <div id="cameraScanner" class="d-none">
                                        <h4>Camera Scanner</h4>
                                        <div class="d-flex justify-content-center">
                                            <div id="reader" class="" style="width: 250px;"></div>
                                        </div>

                                    </div>

                                    <div id="barcodeReader" class="d-none">
                                        <h4>Barcode Reader</h4>
                                        <img src="/images/barcodescanner.png" alt="" class="img-fluid" width="200"
                                            height="200">
                                        <input type="text" id="barcodeData" maxlength="9" minlength="9"
                                            class="form-control text-center" placeholder="Scan or Type Barcode">
                                    </div>
                                </div>
                                <div class="option-scanner text-center">
                                    <h5>Select Method</h5>
                                    <div class="d-flex justify-content-center">
                                        <button id="cameraOption" class="btn btn-primary btn-sm me-2">Use
                                            Camera</button>
                                        <button id="barcodeReaderOption" class="btn btn-secondary btn-sm">Use Barcode
                                            Reader</button>
                                    </div>
                                </div>


                                <div class="">
                                    <h3 class="text-center">Attendance Type</h3>
                                    <div class="radio-tile-group">
                                        <div class="input-container">
                                            <input id="present" class="radio-button" type="radio" name="attendance"
                                                value="Present" />
                                            <div class="radio-tile">
                                                <label for="present" class="radio-tile-label">Present</label>
                                            </div>
                                        </div>
                                        <div class="input-container">
                                            <input id="absent" class="radio-button" type="radio" name="attendance"
                                                value="Absent" />
                                            <div class="radio-tile">
                                                <label for="absent" class="radio-tile-label">Absent</label>
                                            </div>
                                        </div>
                                    </div>


                                </div>
                                <div class="mt-3">
                                    <select id="class_select_id" class="form-select">
                                        <option value="" hidden>Select Class</option>
                                        <% class_records.forEach(classItem=> { %>
                                            <option value="<%= classItem.class_id %>">
                                                <%= classItem.class_name %> - Room <%= classItem.room_number %> (<%=
                                                            classItem.subject_name %>)
                                            </option>
                                            <% }); %>
                                    </select>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="/assets/js/html5-qrcode.js"></script>
    <script src="/assets/js/sweetalert.js"></script>



    <script type="text/javascript">
        document.addEventListener("DOMContentLoaded", function () {

            const updateTime = () => {
                const now = new Date();
                document.getElementById("time").innerHTML = now.toLocaleTimeString('en-US', { hour: 'numeric', minute: 'numeric', second: 'numeric', hour12: true });
                document.getElementById('dynamicDate').innerHTML = now.toLocaleDateString('en-US', { month: 'long', day: 'numeric' });
            };
            updateTime();
            setInterval(updateTime, 1000);
        });

    </script>
    <script type="text/javascript">
        // Variables for storing attendance type and last scan result
        let attendance_type = "";
        let lastResult = "";
        let selectedValue; // This will hold the selected class_id
        let table; // Declare table variable to hold DataTable instance

        // Function to initialize DataTable
        function initializeDataTable(class_id) {
            // Initialize DataTable with the class_id only if it hasn't been initialized
            if (!$.fn.dataTable.isDataTable('#attendanceTable')) {
                table = $("#attendanceTable").DataTable({
                    processing: true,

                    ajax: {
                        url: `/faculty/attendance/class/${class_id}`, // Update this URL with the specific class_id
                        type: "GET",
                    },
                    columns: [
                        { data: 'attendance_id' },
                        { data: 'student_id' },
                        { data: 'name' },
                        { data: 'log_date' },
                        { data: 'status' },
                        { data: 'logs' },
                        // You can include more columns based on your database fields
                    ],
                 
                });
            } else {
                // If the DataTable is already initialized, just update the URL and reload the data
                table.ajax.url(`/faculty/attendance/class/${class_id}`).load(); // Update the URL and reload data
            }
        }

        // Get elements from the DOM
        const barcodeData = document.getElementById('barcodeData');
        const classSelect = document.getElementById('class_select_id');

        // Event listener for class selection change
        classSelect.addEventListener('change', function () {
            selectedValue = this.value; // Update the variable with the selected value

            if (selectedValue) { // Ensure the selected value is not empty or undefined
                initializeDataTable(selectedValue); // Initialize or update the DataTable
                barcodeData.focus(); // Set focus back to barcode input
            }
        });

        // Optional: Initialize the DataTable with a default value if needed
        if (classSelect.value) {
            selectedValue = classSelect.value; // Get the default selected value
            initializeDataTable(selectedValue); // Initialize the DataTable
        }



        // Select all radio buttons for attendance and set the attendance type on change
        const radios = document.querySelectorAll('input[type=radio][name="attendance"]');
        radios.forEach(radio => radio.addEventListener('change', () => {
            attendance_type = radio.value
            document.getElementById('barcodeData').focus();
        }));

        // SweetAlert configuration for toasts
        const Toast = Swal.mixin({
            showClass: { icon: '' }, // Disable popup animation
            toast: true,
            position: 'top',
            showConfirmButton: false,
            timer: 3000,
        });

        // QR Code scanner configuration
        const qrboxFunction = (viewfinderWidth, viewfinderHeight) => {
            let minEdgePercentage = 0.8; // 80%
            let minEdgeSize = Math.min(viewfinderWidth, viewfinderHeight);
            return { width: Math.floor(minEdgeSize * minEdgePercentage), height: Math.floor(minEdgeSize * minEdgePercentage) };
        };

        let config = {
            qrbox: qrboxFunction,
            fps: 15,
            rememberLastUsedCamera: true,
            aspectRatio: 1.0,
            supportedScanTypes: [0],
        };

        // Function called on successful QR code scan
        function scanSuccess(decodedText) {
            if (decodedText !== lastResult) {
                lastResult = decodedText;

                fetch(`/faculty/record-attendance`, {
                    method: "POST",
                    body: JSON.stringify({ barcode: lastResult, attendance_type, class_id: selectedValue }),
                    headers: { "Content-Type": "application/json" },
                })
                    .then(res => res.json())
                    .then(response => {
                        if (response.status === "error") {
                            Toast.fire({ icon: 'error', title: response.msg });
                        } else if (response.status === "success") {
                            table.ajax.reload(null, false);
                            Toast.fire({ icon: 'success', title: response.msg });

                        }
                    })
                    .finally(() => setTimeout(() => lastResult = "", 3000)); // Reset lastResult after 3 seconds
            }
        }

        // Initialize QR code scanner
        const html5QrcodeScanner = new Html5QrcodeScanner("reader", config, false);

        // Barcode reader functionality and option switching
        $(document).ready(function () {
            const barcodeData = $('#barcodeData');

            // Auto-focus barcode input on mouse move
            // $('body').mousemove(() => barcodeData.focus());

            // Handle barcode input when it reaches 9 characters
            barcodeData.on('input', () => {
                if (barcodeData.val().length === 9) {
                    const dataToSend = { barcode: barcodeData.val(), attendance_type, class_id: selectedValue };


                    fetch('/faculty/record-attendance', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify(dataToSend),
                    })
                        .then(res => res.json())
                        .then(response => {

                            if (response.status === "error") {
                                Toast.fire({ icon: 'error', title: response.msg });
                            } else if (response.status === "success") {
                                table.ajax.reload(null, false);
                                Toast.fire({ icon: 'success', title: response.msg });
                                
                            }
                            barcodeData.val(''); // Clear input again in case of successful data handling
                        }).finally(() => barcodeData.val(''));

                }
            });

            // Handle camera option click
            $('#cameraOption').on('click', function () {
                $('#cameraScanner').removeClass('d-none').show(); // Show camera scanner
                $('#barcodeReader').hide(); // Hide barcode reader
                barcodeData.blur(); // Unfocus barcode input
                html5QrcodeScanner.render(scanSuccess); // Start camera scanner
            });

            // Handle barcode reader option click
            $('#barcodeReaderOption').on('click', function () {
                $('#barcodeReader').removeClass('d-none').show(); // Show barcode reader
                $('#cameraScanner').hide(); // Hide camera scanner
                barcodeData.focus(); // Focus barcode input
                html5QrcodeScanner.clear(); // Stop camera scanner
            });
        });
    </script>